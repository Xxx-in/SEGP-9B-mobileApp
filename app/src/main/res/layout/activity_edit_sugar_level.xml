<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Tracker.BloodSugarLevel.EditSugarLevelActivity">

    <RelativeLayout
        android:id="@+id/edit_NewSugarDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/edit_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingRight="35dp"
            android:text="Date"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/edit_editTextDateSugar"
            android:background="@drawable/input_text_box_column"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/edit_Date"
            android:textIsSelectable="true"
            android:ems="10"
            android:inputType="date" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/edit_NewSugarTime"
        android:layout_width="match_parent"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/edit_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:text="Time"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/edit_editTextTimeSugar"
            android:background="@drawable/input_text_box_column"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/edit_Time"
            android:textIsSelectable="true"
            android:ems="10"
            android:inputType="time" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Blood Sugar Level"
        android:textSize="30sp"/>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_gravity="center"
        android:orientation="vertical">


        <EditText
            android:id="@+id/edit_SugarLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/input_text_box_column"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:ems="4"
            android:inputType="number" />


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mmol/L"
        android:paddingBottom="15dp"
        android:layout_gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/edit_Remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remark"
            android:paddingBottom="10dp"
            android:textSize="30sp"/>

        <EditText
            android:id="@+id/edit_SugarRemark"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/input_text_box_column"
            android:ems="15"
            android:layout_below="@id/edit_Remark"
            android:inputType="textLongMessage" />


    </RelativeLayout>

    <Button
        android:id="@+id/edit_ConfirmSugarRecordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="Confirm Edit"
        android:textSize="20dp" />

    <Button
        android:id="@+id/DeleteSugarRecordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Delete"
        android:textSize="20dp" />


</LinearLayout>