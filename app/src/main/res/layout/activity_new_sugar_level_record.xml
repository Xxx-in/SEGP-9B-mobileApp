<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".NewPressureRecord">

    <RelativeLayout
        android:id="@+id/NewSugarDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingRight="35dp"
            android:text="Date"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editTextDateSugar"
            android:background="@drawable/input_text_box_column"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Date"
            android:ems="10"
            android:inputType="date" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/NewSugarTime"
        android:layout_width="match_parent"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:text="Time"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editTextTimeSugar"
            android:background="@drawable/input_text_box_column"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/Time"
            android:ems="10"
            android:inputType="time" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Blood Sugar Level"
        android:textSize="30sp"/>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_gravity="center"
            android:orientation="vertical">


            <EditText
                android:id="@+id/SugarLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text_box_column"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:ems="4"
                android:inputType="number" />


        </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mmol/L"
        android:paddingBottom="15dp"
        android:layout_gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/Remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remark"
            android:paddingBottom="20dp"
            android:textSize="30sp"/>

        <EditText
            android:id="@+id/SugarRemark"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/input_text_box_column"
            android:ems="15"
            android:layout_below="@id/Remark"
            android:inputType="textLongMessage" />


    </RelativeLayout>

    <Button
        android:id="@+id/ConfirmSugarRecordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_gravity="center"
        android:text="Confirm"
        android:textSize="20dp" />


</LinearLayout>