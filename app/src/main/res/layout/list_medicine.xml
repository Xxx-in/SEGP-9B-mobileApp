<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/medicineImage"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_pill" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TableRow>
            <TextView android:id="@+id/medicineName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0000A0"
                android:textSize="15sp"/>
        </TableRow>
        <TableRow>
            <TextView android:id="@+id/manufacturer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lightgrey"
                android:textSize="12sp"/>
        </TableRow>
        <TableRow>
            <TextView android:id="@+id/medicineDosage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lightgrey"
                android:textSize="12sp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/medicinePurpose"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/lightgrey"
                android:textSize="12sp" />
        </TableRow>
        <TableRow>
            <TextView android:id="@+id/medicineRemark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lightgrey"
                android:textSize="12sp"/>
        </TableRow>
    </TableLayout>

</LinearLayout>